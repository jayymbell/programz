<%= form_with(model: program, remote: true) do |form| %>
    <%= render 'layouts/error_messages', object: form.object %>
  <div class="row">
  <div class="col-sm-12">
    <div class="actions float-right">
      <%= form.submit 'Submit', class: 'btn btn-link btn-sm' %>
    </div>
  </div>
</div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :program_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :program_description, style: "height: 200px;" %>
  </div>

<% end %>
