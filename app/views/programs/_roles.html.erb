<%= link_to 'New Role', new_program_role_path( program_id: @program.id), class: 'btn btn-success btn-sm float-right', remote: true, style: "margin-top: 10px;" %>
<br/>
<br/>
<table class="table table-striped">
<thead>
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <% @program.roles.each do |role| %>
      <tr>
        <td><%= link_to role.name, edit_program_role_path(role), remote: true %></td>
        <td>
        <%= link_to role, method: :delete, data: { confirm: 'Are you sure?' }, remote: true do %>
          <i class="fa fa-trash text-danger float-right"></i>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>