<div class="row">
<div class="col-sm-12">
<h3 style="display:inline-block;">Sites</h3>
<%= link_to 'New Site', new_site_path, class: 'btn btn-success btn-sm float-right', remote: true %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Address 3</th>
      <th>City</th>
      <th>State</th>
      <th>Postal code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.description %></td>
        <td><%= site.address_1 %></td>
        <td><%= site.address_2 %></td>
        <td><%= site.address_3 %></td>
        <td><%= site.city %></td>
        <td><%= site.state %></td>
        <td><%= site.postal_code %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
